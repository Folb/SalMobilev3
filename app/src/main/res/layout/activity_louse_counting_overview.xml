<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_louse_counting_overview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.folb.salmobile.activities.lousecounting.LouseCountingOverviewActivity">

    <RelativeLayout
        android:id="@+id/overview_header_container"
        android:layout_width="match_parent"
        app:layout_heightPercent="10%"
        android:layout_alignParentTop="true">
    </RelativeLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        app:layout_heightPercent="59%"
        android:layout_below="@id/overview_header_container"/>

    <GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="match_parent"
        app:layout_heightPercent="15%"
        android:layout_below="@id/listview"/>

    <RelativeLayout
        android:id="@+id/navbar_container"
        android:layout_width="match_parent"
        app:layout_heightPercent="16%"
        android:layout_alignParentBottom="true"/>


</android.support.percent.PercentRelativeLayout>
