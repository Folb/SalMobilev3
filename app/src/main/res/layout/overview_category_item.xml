<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:id="@+id/fish_list"
        app:layout_widthPercent="25%"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fish_list_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fs_overview"
        app:layout_widthPercent="15%"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/fish_list">

        <TextView
            android:id="@+id/fs_overview_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="25sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lb_overview"
        app:layout_widthPercent="15%"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/fs_overview">

        <TextView
            android:id="@+id/lb_overview_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="25sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sb_overview"
        app:layout_widthPercent="15%"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/lb_overview">

        <TextView
            android:id="@+id/sb_overview_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/orange"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="25sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/kh_overview"
        app:layout_widthPercent="15%"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/sb_overview">

        <TextView
            android:id="@+id/kh_overview_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/orange_red"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="25sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sl_overview"
        app:layout_widthPercent="15%"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/kh_overview">

        <TextView
            android:id="@+id/sl_overview_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="25sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@id/sl_overview"/>

</android.support.percent.PercentRelativeLayout>